<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.InstaSave" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/accent</item>

        <item name="backgroundColor">@color/colorBackground</item>
        <item name="navHeaderColor">@color/white</item>

        <item name="settingsHeaderBackgroundColor">@color/lightSettingsHeaderBackgroundColor</item>
        <item name="normalIconTint">@color/lowImportanceTextColor</item>

        <item name="searchIconTint">@color/black</item>
        <item name="searchBackgroundColor">@color/accent</item>
        <item name="searchTextColor">@color/black</item>

        <item name="highImportantTextColor">@color/black</item>
        <item name="mediumImportantTextColor">@color/mediumImportanceTextColor</item>
        <item name="lowImportanceTextColor">@color/lowImportanceTextColor</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorControlNormal">@color/white</item>

        <item name="dialogColor">@color/white</item>

        <item name="instaEditTextBackground">@color/white</item>
        <item name="instaEditTextTextColor">@color/lowImportanceTextColor</item>

        <item name="snackbarStyle">@style/snackbar_style</item>
        <item name="snackbarTextViewStyle">@style/snackbar_text</item>

        <item name="badgeStyle">@style/CustomBadge</item>
        <item name="photoCardBackground">@color/white</item>

        <item name="cardViewBackgroundColor">@color/whiteDim</item>

        <item name="android:windowLightStatusBar">true</item>

    </style>


    <style name="CustomBadge" parent="@style/Widget.MaterialComponents.Badge">
        <item name="backgroundColor">@color/lightGreen</item>
    </style>

    <style name="tabLayoutStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="Theme.InstaSave.Fullscreen" parent="Theme.InstaSave">
        <item name="android:actionBarStyle">@style/Widget.Theme.InstaSave.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="snackbar_style" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">@color/darkNavHeaderColor</item>
    </style>


    <style name="snackbar_text" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/white</item>
    </style>


</resources>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="?attr/searchBackgroundColor"
    android:elevation="@dimen/dimen16"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/main_message_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dimen12"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Custom Message"
        android:textColor="?attr/searchTextColor"
        android:textSize="@dimen/dimen18" />


</LinearLayout>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.InstaSave" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/darkPrimary</item>
        <item name="colorPrimaryDark">@color/darkPrimaryDark</item>
        <item name="colorAccent">@color/lightGreen</item>

        <item name="backgroundColor">@color/darkBackground</item>
        <item name="navHeaderColor">@color/darkNavHeaderColor</item>

        <item name="settingsHeaderBackgroundColor">@color/darkSettingsHeaderBackgroundColor</item>
        <item name="normalIconTint">@color/lightGreen</item>

        <item name="searchIconTint">@color/white</item>
        <item name="searchBackgroundColor">@color/darNavBackgroundColor</item>
        <item name="searchTextColor">@color/white</item>

        <item name="mediumImportantTextColor">@color/darkLowImportanceTextColor</item>
        <item name="lowImportanceTextColor">@color/darkMediumImportanceTextColor</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorControlNormal">@color/white</item>

        <item name="dialogColor">@color/darkPrimary</item>

        <item name="instaEditTextBackground">@color/darNavBackgroundColor</item>
        <item name="instaEditTextTextColor">@color/darkLowImportanceTextColor</item>

        <item name="snackbarStyle">@style/snackbar_style</item>
        <item name="snackbarTextViewStyle">@style/snackbar_text</item>

        <item name="badgeStyle">@style/CustomBadge</item>
        <item name="photoCardBackground">@color/darkPrimary</item>

        <item name="cardViewBackgroundColor">@color/darNavBackgroundColor</item>

    </style>

    <style name="CustomBadge" parent="@style/Widget.MaterialComponents.Badge">
        <item name="backgroundColor">@color/white</item>
    </style>

    <style name="tabLayoutStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="snackbar_style" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">@color/darkNavHeaderColor</item>
    </style>


    <style name="snackbar_text" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>